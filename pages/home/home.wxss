.home-container { 
  height: 100vh;
  background: #F6F6F6;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
 }

  .tomato-wrapper {
    flex: 1;
    margin-top: 140rpx;
    padding: 0 28rpx;
  }
  .tomato-wrapper .tomato {
    background:#EEF7F6;
    border-radius: 8rpx;
    box-shadow: 0px 2px 8px 0px rgba(0,0,0,0.10);
    height: 460rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

 .createButton { 
   position: absolute;
   top: 580rpx;
   left: 50%;
   transform: translateX(-50%);
  }

 .todoList { 
   padding: 13rpx 30rpx;
   color: #333;
   font-size: 28rpx;
   box-sizing: border-box;
   max-height: 552rpx;
   min-height: 552rpx;
  }
  .todoList .item { 
    display: flex;
    align-items: center;
    background: #fff;
    box-shadow: 0rpx 2rpx 6rpx 0rpx rgba(0,0,0,0.10);
    border-radius: 8rpx;
    padding: 17rpx 50rpx;
    margin-bottom: 24rpx;
    transition: all 1s ease-out;
   }
   .item.active{
     opacity: 0.1;
     transition: all 1s ease-out;
   }
  .todoList .item:last-child { margin: 0; }
  .todoList .item text {
      flex: 1;
      overflow : hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
    }
  .todoList .item .select {
     border-radius: 50%;
     width: 38rpx;
     height: 38rpx;
     border: 4rpx solid #FE996F;
     margin-right: 38rpx;
     position: relative;
    }
  .todoList .item .select.active {
    background: #FE996F;
    transition: all 1s ease-out;
  }  