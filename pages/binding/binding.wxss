.binding{
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center; 
  position: relative;
}
.title{
  font-size: 42rpx;
  font-family: PingFangSC-Regular;
  color: #F6705A;
  margin-top: 83rpx;
  
}
.input-wrapper{
  margin-top: 77rpx;
}
.input-wrapper > input{
  border: 2rpx solid #F6705A;
  width: 640rpx;
  height: 80rpx;
  border-radius:16rpx;
  box-shadow: 0px 11px 32px 0px rgba(246,112,90,0.30); 
  font-size: 30rpx;
  margin-bottom: 56rpx;
}
.buttonWrapper{
  margin-top: 28rpx;
}
.tips{
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  color: #F6705A;
  margin-top: 60rpx;
}

.binding > .bg{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 380rpx;
  opacity: 0.8;
}